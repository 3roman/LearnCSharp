<Window x:Class="没有Path的Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="193.846" Width="341.923">
    <Grid>
        <Grid.Resources>
            <system:String x:Key="PoemString">
                菩提本无树，明镜亦非台。
                本来无一物，何处惹尘埃。
            </system:String>
        </Grid.Resources>
        <!--由于source本身就是数据，path可以省略。-->
        <TextBlock TextWrapping="Wrap" Margin="5" FontSize="25"
                   Text="{Binding Source={StaticResource ResourceKey=PoemString}}"
                   />
    </Grid>
</Window>
