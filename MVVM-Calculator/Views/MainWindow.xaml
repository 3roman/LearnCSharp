<Window x:Class="MVVMDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel >
        <TextBox Margin="5" FontSize="40" Text="{Binding Input1}"/>
        <TextBox Margin="5" FontSize="40" Text="{Binding Input2}"/>
        <TextBox Margin="5" FontSize="40" Text="{Binding Result}"/>
        <Button Margin="5"  FontSize="40" Content="Add" Command="{Binding AddCommand}"/>
        <Button Margin="5"  FontSize="40" Content="Help" Command="{Binding HelpCommand}"/>
    </StackPanel>
</Window>
